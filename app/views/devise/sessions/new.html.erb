<div class='login-form'>
  <h1 class='sign-in-title'>ログイン</h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <label class='field'>
      <p>email</p>
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', class:'input-style short-input' %>
    </label>

    <label class='field'>
      <p>パスワード</p>
      <%= f.password_field :password, autofocus: true, autocomplete: 'current-password', class:'input-style short-input' %>
    </label>

    <div class="actions">
      <%= f.submit "ログイン", class:'post-btn' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>